<html>
<head>
  <title>Games</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
</head>


<body>
  <div>
   <%= yield %>

  <h1>Longest word game</h1>

  <p>Here are your letters:</p>

  <% @letters.each do |letter| %>
    <div class= "alphabet"><%= letter %></div>
  <% end %>


  <form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :letters, @letters.join %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="Your word here">
      <input type="submit" value="Submit">
    </form>
  </div>
</body>
</html>
